doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
 
    // StyleSheet
    link(rel="stylesheet",
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
    crossorigin="anonymous")

    title MemoPad

  
  body
    h1 Hello World
    p Here's a list of posts!

    // ボタン
    button#postModalButton.btn.btn-primary(type="button" data-toggle="modal" data-target="#postModal")
      | Post It!
    // モーダル
    #postModal.modal.fade(tabindex="-1" role="dialog" aria-labelledby="postModalLabel" aria-hidden="true")
      .modal-dialog(role="document")
        .modal-content
          .modal-header
            h5#postModalLabel.modal-title Push Your Knowledge!
            button.close(type="button" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") ×
          .modal-body
            form.form-group(method="post" action="/posts")
              label.col-form-label(for="message-text") Content：
              textarea#message-text.form-control 
          .modal-footer
            button.btn.btn-secondary(type="button" data-dismiss="modal") Close
            button.btn.btn-primary(type="submit") Push Content

    //JavaScript
    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js",
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
    crossorigin="anonymous")

    script.
      // モーダルウインドウの初期化
      ("#postModal").modal();

      // ToDo: 投稿した際の挙動
      function consoleWindow() {
        console.info( (".form-group").val() );
      };
    